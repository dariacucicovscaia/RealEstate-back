<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="create-dynamic_application_configuration-table" author="DariaC">
        <createTable tableName="dynamic_application_configuration">
            <column name="configuration_name" type="varchar(45)"/>
            <column name="configuration_type" type="varchar(45)"/>
            <column name="configuration_body" type="text"/>
            <column name="configuration_status" type="bit(1)"/>
        </createTable>
    </changeSet>
    <changeSet author="DariaC" id="addUniqueConstraint-dynamic_application_configuration-table">
        <addUniqueConstraint
                columnNames="configuration_type, configuration_name"
                constraintName="id_constraint"
                tableName="dynamic_application_configuration"
        />
    </changeSet>
</databaseChangeLog>